<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/h_profile"
            android:layout_width="82dp"
            android:layout_height="92dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:src="@drawable/default_user"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/h_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_profile"
            android:layout_centerHorizontal="true"
            android:text="kindred inocencio"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/h_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_username"
            android:layout_centerHorizontal="true"
            android:text="kindred.inocencio@gmail.com"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>