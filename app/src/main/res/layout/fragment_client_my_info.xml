<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientMyInfoFragment"
    android:background="@drawable/gradient_background">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/h_profile"
                android:layout_width="121dp"
                android:layout_height="124dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/kindred"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="Change photo"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Kindred Inocencio"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Email: kindred.inocencio@gmail.com"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Contact Number: 09369275915"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


    </FrameLayout>