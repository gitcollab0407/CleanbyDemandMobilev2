<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17545454"
    android:orientation="vertical"
    android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/servicebg"
                    android:background="@drawable/d_deluxe"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/d_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:paddingLeft="5dp"
                            android:text="Deluxe Cleaning (2Hours)"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/d_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:text="Total : â‚± 400.00"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:text="Kindred INocen"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/d_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:drawableLeft="@drawable/d_calendar"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text=" Sep, 20, 2018"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/d_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="57dp"

            android:drawableLeft="@drawable/d_clock"
            android:gravity="center|left"
            android:paddingRight="5dp"
            android:text=" 9:00AM"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_cleaner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:drawableLeft="@drawable/d_cleaning"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text=" =1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/d_payment"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:drawableLeft="@drawable/d_credit_card"
            android:gravity="center|left"
            android:paddingRight="5dp"
            android:text=" CASH"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center|left"
            android:paddingLeft="25dp"
            android:text="Message"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/d_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center|left|top"
            android:maxHeight="80dp"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollbars="vertical"
            android:text="No Message"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center|left"
            android:paddingLeft="25dp"
            android:text="Address"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/d_address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center|left|top"
            android:maxHeight="50dp"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollbars="vertical"
            android:text="Address"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="30dp"
            android:gravity="center"
            android:text="START"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>

</LinearLayout>


</LinearLayout>



</android.support.v7.widget.CardView>