<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17545454"
    android:orientation="vertical"
    android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_background">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/h_profile"
                        android:layout_width="81dp"
                        android:layout_height="75dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/kindred"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/d_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/h_profile"
                        android:paddingLeft="5dp"
                        android:text="Kindred Inocencio"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/d_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:paddingLeft="5dp"
                android:text="Premium Cleaning (4Hours)"
                android:textSize="20dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:drawableLeft="@drawable/d_calendar"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text=" Sep, 20, 2018"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/d_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="54dp"

            android:drawableLeft="@drawable/d_clock"
            android:gravity="center|left"
            android:paddingRight="5dp"
            android:text=" 9:00AM"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

        <TextView
            android:id="@+id/d_cleaner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:drawableLeft="@drawable/d_cleaning"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text=" =1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/d_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:drawableLeft="@drawable/d_credit_card"
            android:gravity="center|left"
            android:paddingRight="5dp"
            android:text=" Credit Card"
            android:textSize="15dp" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center|left"
            android:paddingLeft="25dp"
            android:text="Message"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/d_message_content"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center|left|top"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollbars="vertical"
            android:text="In the opening paragraph--or with more complex request letters this is the second paragraph. After you make your request, give any necessary details to help the receiver of your letter fully understand what you are asking for.
In the opening paragraph--or with more complex request letters this is the second paragraph. After y"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/d_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="25dp"
            android:gravity="center|left"
            android:text="Address"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/d_address_content"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center|left|top"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollbars="vertical"
            android:text="In the opening paragraph--or with more complex request letters this is the second paragraph. After you make your request, give any necessary details to help the receiver of your letter fully understand what you are asking for.
In the opening paragraph--or with more complex request letters this is the second paragraph. After y"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
android:textSize="30dp"
            android:gravity="center"
            android:text="START" />

    </RelativeLayout>

</LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>